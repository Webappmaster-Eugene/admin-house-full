name: Check
on: push

jobs:
  job-back-lint:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      - name: Get to backend directory
        run: cd back
      - name: Install deps
        run: npm install
      - name: Lint
        uses: npm run lint
  job-back-test:
    needs: [job-back-lint]
    strategy:
      matrix:
        version: [18,20]
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: ${{ matrix.version }}
      - name: Get to backend directory
        run: cd back
      - name: Install deps
        run: npm install
      - name: Test
        uses: npm run test
  job-back-secret:
    runs-on: ubuntu-latest
    steps:
      - name: Print secret
        run: echo 'use secrets'